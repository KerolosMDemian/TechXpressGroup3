@model IEnumerable<TechXpress.Data.Entities.Category>

@{
    ViewData["Title"] = "Home";
}
@if(User.IsInRole("Admin")){
    <div class="container mt-0">
        <h2 class="text-center mb-4">Admin Dashboard</h2>
        <div class="row mt-4">

            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3 p-3 rounded">
                    <div class="card-header text-center">
                        <a asp-controller="User" asp-action="Index">
                            <i class="fa-solid fa-user  fa-2xl" style="color: #f4f4f6;"></i>
                       
                        </a>
                       <div>Users</div>
                    </div>
                    <div class="card-body">
                        <h3>@ViewBag.UsersCount</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-success mb-3 p-3 rounded">
                    <div class="card-header text-center">
                        <a asp-controller="Product" asp-action="Index">
                            @* <i class="fa-solid fa-user fa-2xl"></i> *@
                            <i class=" fa-solid fas fa-box fa-2xl"></i>
                        </a>
                        <div>Products</div>
                       </div>
                    <div class="card-body">
                        <h3>@ViewBag.ProductsCount</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-info mb-3 p-3 rounded">
                    <div class="card-header text-center ">
                        <a asp-controller="Category" asp-action="Index">
                            <i class=" fa-solid fa-tags fa-2xl"></i>
                        </a>
                        <div>Category</div>
                    </div>
                    <div class="card-body">
                        <h3>@ViewBag.CategoriesCount</h3>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
else{
    <div class="container mt-4">
        <h2 class="text-center mb-4">Welcome To Our Site</h2>

        @foreach (var category in Model)
        {
            <div class="category-container mb-5">
                <h3 class="text-center">@category.Name</h3>
                <div class="row">
                    @foreach (var product in category.Products)
                    {
                        <div class="col-12 col-sm-6 col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                                    <img src="~/imgs/@product.ImgUrl"
                                     class="card-img-top"
                                     alt="@product.Name"
                                     style="height: 250px; object-fit: cover;" />
                                     </a>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <h6 class="mt-auto text-primary">@product.Price.ToString("C")</h6>
                                    <h6 class="mt-auto text-success">In Stock: @product.StockQuantity</h6>
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-userId="@User.Identity.Name" asp-route-productId="@product.Id" class="btn btn-outline-primary mt-3">Add to Cart</a>


                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}