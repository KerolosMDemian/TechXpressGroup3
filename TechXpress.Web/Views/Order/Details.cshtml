@model TechXpress.Data.Entities.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id Details</h2>

<p><strong>User:</strong> @Model.User.UserName</p>
<p><strong>Date:</strong> @Model.OrderDate.ToString("f")</p>
<p><strong>Total:</strong> @Model.Items.Sum(i => i.Quantity * i.Product.Price).ToString("C") </p>
<p><strong>Payment Method:</strong> @Model.PaymentMethod</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Subtotal</th>
            <th>Payment Stuts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Product.Price)</td>
                <td>@item.Order.OrderStatus</td>
            </tr>
        }
    </tbody>
</table>
