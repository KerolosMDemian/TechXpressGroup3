@model IEnumerable<TechXpress.Data.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>All Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Date</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.UserName</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@(order.Items.Sum(i => i.Quantity * i.Product.Price)) EGP</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
